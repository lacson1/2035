# Production Environment Variables Template
# Copy this file to .env.production and fill in the values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=physician_dashboard_2035
POSTGRES_PORT=5432

# Database URL for backend (will be constructed from above variables)
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@postgres:5432/physician_dashboard_2035?sslmode=require&connection_limit=20&pool_timeout=20

# ==========================================
# REDIS CONFIGURATION (Optional)
# ==========================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:your_secure_redis_password_here@redis:6379
REDIS_PORT=6379

# ==========================================
# JWT CONFIGURATION
# ==========================================
# Generate strong secrets using: openssl rand -base64 32
JWT_SECRET=your_strong_jwt_secret_here_minimum_32_characters
JWT_REFRESH_SECRET=your_strong_jwt_refresh_secret_here_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Comma-separated list of allowed origins
CORS_ORIGIN=https://your-frontend-domain.com,https://*.vercel.app,https://*.netlify.app

# ==========================================
# MONITORING & ERROR TRACKING
# ==========================================
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id
LOG_LEVEL=info

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NODE_ENV=production
BACKEND_PORT=3000
ENABLE_SWAGGER=false

# ==========================================
# MONITORING (Optional)
# ==========================================
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_admin_password

# ==========================================
# DEPLOYMENT SPECIFIC
# ==========================================
# These will be set by your deployment platform
# RENDER_SERVICE_ID=your-render-service-id
# RENDER_API_KEY=your-render-api-key
# VERCEL_TOKEN=your-vercel-token
# VERCEL_ORG_ID=your-vercel-org-id
# VERCEL_PROJECT_ID=your-vercel-project-id

# ==========================================
# BACKUP CONFIGURATION (Optional)
# ==========================================
# AWS S3 or similar for backups
# BACKUP_S3_BUCKET=your-backup-bucket-name
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
